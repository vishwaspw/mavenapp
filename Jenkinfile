pipeline {
    agent any

    tools {
        // Assuming you have Maven installed on Jenkins
        maven 'Maven_3.8.1' // Change this to the Maven version installed in Jenkins
        jdk 'OpenJDK 11' // Change this to the JDK version you use
    }

    environment {
        MAVEN_HOME = tool name: 'Maven_3.8.1', type: 'ToolLocation'
        JAVA_HOME = tool name: 'OpenJDK 11', type: 'ToolLocation'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your repository from Git
                git 'https://github.com/vishwaspw/mavenapp.git' // Replace with your Git repository URL
            }
        }

        stage('Build') {
            steps {
                // Run Maven build
                sh "'${MAVEN_HOME}/bin/mvn' clean install"
            }
        }

        stage('Test') {
            steps {
                // Run tests with Maven
                sh "'${MAVEN_HOME}/bin/mvn' test"
            }
        }

        stage('Deploy') {
            steps {
                // Deploy to an artifact repository, for example (replace with your deploy task):
                sh "'${MAVEN_HOME}/bin/mvn' deploy"
            }
        }
    }

    post {
        success {
            echo 'Build and tests succeeded!'
        }

        failure {
            echo 'Build or tests failed.'
        }
    }
}

